<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <form action="?" method="post">
            标题：<input type="text" name="title" id=""><br>
            描述：<textarea name="description"></textarea><br>
            链接地址：<input type="text" name="href" id="">
            <input type="submit" value="添加">
          </form>
        </div>
        <table border="1" width="80%">
          <thead>
              <tr>
                  <th>ID</th>
                  <th>标题</th>
                  <th>描述</th>
                  <th>链接</th>
                  <th>操作</th>
                </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<banners.length;i++) {%>
            <tr>
                <th><%=banners[i].ID%></th>
                <th><%=banners[i].title%></th>
                <th><%=banners[i].description%></th>
                <th><%=banners[i].href%></th>
                <th>
                  <a href="?act=mod&id=<%=banners[i].ID%>">修改</a>
                  <a href="?act=del&id=<%=banners[i].ID%>" onclick="return confirm('你真的要删吗？')">删除</a>
                </th>
            </tr>
            <% } %>
          </tbody>
          
        </table>

      </div>
    </div>
  </body>
</html>
